@model BLL.DTO.PizzaDTO

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure?</h3>
<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Model.Id
        </dt>
        <dt class = "col-sm-10">
            @Model.Name
        </dt>
        <dt class = "col-sm-2">
            @Model.Caloric
        </dt>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-dark m-1" />
        <a asp-action="Index" class="btn btn-outline-dark m-1">Back</a>
    </form>
</div>
