@{
    ViewBag.Title = "Course Update";
    Layout = "_Layout";
}

@model CourseModel
<div class="login-box">
    <h2>Обновление в таблице: Course</h2>
    <form asp-controller="Course", asp-action="CourseUpdate", method="post">
        <div class="user-box">
            <input type="text" name="Id"  required="" readonly="readonly" value="@Model.Id">
            <label>Id</label>
        </div>
        <div class="user-box">
            <input type="text" name="CourseName" required="" value="@Model.CourseName">
            <label>Курс</label>
        </div>
        <div class="user-box">
            <input type="text" name="Description" required="" value="@Model.Description">
            <label>Описание</label>
        </div>
        <input style="background: black" type="submit" value="Сохранить"/>
    </form>
</div>