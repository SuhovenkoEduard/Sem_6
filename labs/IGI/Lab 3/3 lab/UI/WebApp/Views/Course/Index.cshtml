@using BLL
@model List<CourseModel>

@{
    ViewBag.Title = "courses";
    Layout = "_Layout";
}

<table class="table">
    <thead>
    <tr>
        <th> Id</th>
        <th>CourseName</th>
        <th>Description</th>
        <th> Таблица Course</th>
    </tr>
    </thead>
    <tbody>
    @foreach (CourseModel course in Model)
    {
        <tr>
            <td>@course.Id</td>
            <td>@course.CourseName</td>
            <td>@course.Description</td>
            <td>
                <a href="@Url.Action("CourseDelete", "Course", course)">
                    <img src="@Url.Content("Image/img_216917.png")"/>
                </a>
                <a href="@Url.Action("CourseUpdate", "Course", course)">
                    <img src="@Url.Content("Image/update-icon-12.jpg")"/>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>