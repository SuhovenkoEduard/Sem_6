@{
    ViewBag.Title = "Address Update";
    Layout = "_Layout";
}

@model AddressModel
<div class="login-box">
    <h2>Обновление в таблице: Address</h2>
    <form asp-controller="Address", asp-action="AddressUpdate", method="post">
        <div class="user-box">
            <input type="text" name="Id"  required="" readonly="readonly" value="@Model.Id">
            <label>Id</label>
        </div>
        <div class="user-box">
            <input type="text" name="ExistAddress" required="" value="@Model.ExistAddress">
            <label>Адресс</label>
        </div>
        <input style="background: black" type="submit" value="Сохранить"/>
    </form>
</div>
